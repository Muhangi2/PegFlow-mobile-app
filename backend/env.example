# Payvia Backend Environment Variables

# Server Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:8081
BACKEND_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/payvia
REDIS_URL=redis://localhost:6379

# JWT Configuration
# SECURITY: Generate a strong 256-bit (32+ character) secret key
# Example: openssl rand -hex 32
JWT_SECRET=your-super-secret-jwt-key-here-must-be-at-least-32-characters-long
JWT_EXPIRES_IN=24h

# Stellar Network Configuration
STELLAR_NETWORK=testnet
STELLAR_HORIZON_URL=https://horizon-testnet.stellar.org
STELLAR_SOROBAN_RPC_URL=https://soroban-testnet.stellar.org
STELLAR_CONTRACT_ID=your-soroban-contract-id-here

# USDC Asset Configuration
USDC_ASSET_ISSUER=your-usdc-issuer-account-here
USDC_ASSET_CODE=USDC

# MTN Mobile Money Configuration
MTN_API_URL=https://sandbox.momodeveloper.mtn.com
MTN_API_KEY=your-mtn-api-key
MTN_SUBSCRIPTION_KEY=your-mtn-subscription-key
MTN_TARGET_ENVIRONMENT=sandbox

# Airtel Money Configuration
AIRTEL_API_URL=https://openapiuat.airtel.africa
AIRTEL_CLIENT_ID=your-airtel-client-id
AIRTEL_CLIENT_SECRET=your-airtel-client-secret
AIRTEL_COUNTRY=UG

# Flutterwave Configuration (Bank Transfers)
FLUTTERWAVE_API_URL=https://api.flutterwave.com/v3
FLUTTERWAVE_SECRET_KEY=your-flutterwave-secret-key
FLUTTERWAVE_PUBLIC_KEY=your-flutterwave-public-key

# Exchange Rate API
EXCHANGE_RATE_API_URL=https://api.exchangerate-api.com/v4/latest/USD
EXCHANGE_RATE_API_KEY=your-exchange-rate-api-key

# Bill Payment Providers
UMEME_API_KEY=your-umeme-api-key
NWSC_API_KEY=your-nwsc-api-key
DSTV_API_KEY=your-dstv-api-key

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/payvia.log

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Security
SESSION_SECRET=your-session-secret-key-here-must-be-at-least-32-characters
SECURE_COOKIES=true
COOKIE_MAX_AGE=86400000

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# SMS Configuration (for notifications)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-key

# Monitoring Configuration
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key

# File Upload Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=payvia-uploads

# Development Configuration
CORS_ORIGIN=http://localhost:8081
ENABLE_SWAGGER=true
ENABLE_LOGGING=true
